%p#notice= notice
.container-fluid.border-body
  .row
    .col-8
      = image_tag @item.image.url(:original), class: 'item-image-big img-fluid'
    .col-4.border-left
      %h4.font-weight-bold= @item.title
      %h5.text-sm= @item.city.name
      %br
      %h4.font-weight-bold= "#{@item.price} p."
      = link_to t(:message_owner), root_path, class: 'btn btn-success btn-block'
      .contacts-window.mt-2.border-body.text-center
        %h5= @item.user.first_phone
        %h5= @item.user.second_phone
      .owner-window.border-body.mt-2
        .row
          .col-4
            = link_to user_path(@item.user_id) do
              = image_tag @item.user.avatar(:thumb), class: 'border'
          .col-8
            = link_to user_path(@item.user_id) do
              %p.font-weight-bold= "#{@item.user.second_name} #{@item.user.first_name}"
            %p= "#{t(:ads)}: #{@item.user.items.count}"
            = link_to user_path(@item.user_id) do
              %p.user-registered.text-right= "#{t(:registered_at)}: #{@item.user.created_at.strftime("%B %d, %Y")}"
  .row
    .col-8.mt-2
      %h4.font-weight-bold.text-center= "#{t(:about)} #{@item.title}"
  %p
    %b Title:
    = @item.title
  %p
    %b Category:
    = @item.category
  %p
    %b Manufacturer:
    = @item.manufacturer
  %p
    %b Condition:
    = @item.condition
  .row
    .col-8.mt-2
      %h4.font-weight-bold.text-center= t(:description)
      %h5= @item.description
  - if policy(@item).update?
    = link_to t(:edit), edit_item_path(@item), class: 'btn btn-primary'
  = link_to t(:back), items_path, class: 'btn btn-secondary'
  - if policy(@item).destroy?
    = link_to t(:destroy), item_path(@item), class: 'btn btn-danger', method: :delete, data: { confirm: t(:not_sure) }
