%h1 Listing news

%table
  %thead
    %tr
      %th Title
      %th Description
      %th User
      %th Published
      %th
      %th
      %th

  %tbody
    - @news.each do |news|
      %tr
        %td= news.title
        %td= news.description
        %td= news.user
        %td= news.published
        %td= link_to 'Show', news
        %td= link_to 'Edit', edit_news_path(news)
        %td= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }

