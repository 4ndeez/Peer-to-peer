.row
  .col-md-8
    %ul.list-group
      - @conversations.each do |conversation|
        %li{ class: 'list-group-item', 'data-conversation-id': 'conversation.id' }
          = link_to conversation.recipient(current_user).email, conversation_messages_path(conversation)
          - if !conversation.unread_message_count(current_user).zero?
            %span.badge= conversation.unread_message_count(current_user)
  .col-md-4
    .form-group
      %input{ id: 'search', placeholder: 'Search', class: 'form-control' }
    %ul{id: 'users', class: 'form-control'}
      - @users.each do |user|
        %li{ class: 'list-group-item', 'data-searchstring': 'user.email'}
