%nav.navbar.navbar-expand-md.navbar-light.bg-light.border-simple
  = link_to image_tag('p2p_logo.png', style: 'max-height: 50px'), root_path, class: 'navbar-brand'
  %button{ class: 'navbar-toggler', type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbarCollapse' }
    %span.navbar-toggler-icon
  .collapse.navbar-collapse.justify-content-between{ id: 'navbarCollapse'}
    .navbar-nav
      = link_to 'Home', root_path, class: 'nav-item nav-link'
      = link_to 'News', root_path, class: 'nav-item nav-link'
    = form_tag(root_path, method: :get, html: { class: 'form-inline' }) do
      .input-group
        = text_field_tag(:search, params[:search], minlength: 1, class: 'form-control')
        .input-group-append
          = submit_tag "Search", class: 'btn btn-primary'
    .navbar-nav
      - if user_signed_in?
        = link_to 'New ad', new_item_path, class: 'btn btn-primary'
        .nav-item.dropdown.mr-4
          = link_to 'Profile', user_path(current_user), class: 'nav-link dropdown-toggle', 'data-toggle': 'dropdown'
          .dropdown-menu
            = link_to 'Show', user_path(current_user), class: 'dropdown-item'
            - if current_user.admin?
              = link_to 'Admin', rails_admin_path, class: 'dropdown-item'
            = link_to 'Messages', conversations_path, class: 'dropdown-item'
            = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item'
      - else
        = link_to 'Login', new_user_session_path, class: 'nav-item nav-link active'


