%nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-simple
  .container-fluid
    %ul.nav.navbar-nav.navbar-left
      %img= link_to image_tag('p2p_logo.png', style: 'max-height: 50px'), root_path, class: 'navbar-brand'
      %li.nav.navbar-nav.mt-3= 'Best advertisement lounge'
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li
          .nav-search.mr-1
            = text_field_tag :search, params[:search_params], placeholder: 'Search', class: 'form-control'
            //= submit_tag 'Search', class: 'btn btn-success'
        %li.mr-1
          = link_to 'New ad', new_item_path, class: 'btn btn-primary'
        %li.mr-1.mt-2= link_to current_user.first_name, user_path(current_user)
        %ul.nav
          %li.dropdown
            %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown", "data-target" => "#"}
              = image_tag current_user.avatar.url(:small), class: 'navbar-profile'
              %b.caret
            %ul.dropdown-menu{"role" => "menu"}
              %li
                = link_to 'User profile', user_path(current_user)
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete
      - else
        %li.mr-1
          = link_to 'Sign in', new_user_session_path, class: 'btn btn-primary text-white'
        %li
          = link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary text-white'